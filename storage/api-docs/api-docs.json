{
    "openapi": "3.0.0",
    "info": {
        "title": "Postgrain - Backend Api Test",
        "version": "1.0"
    },
    "paths": {
        "/v1/reminder": {
            "post": {
                "tags": [
                    "ReminderController"
                ],
                "summary": "Cria um lembrete",
                "description": "Cria um lembrete e retorna o lembrete criado.",
                "operationId": "store",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "date",
                                    "type"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "type": {
                                        "description": "DEFAULT / ONCE / EVERY / WEEKLY / MONTHLY / YEARLY / CUSTOMIZED",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Reminder"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/v1/reminder/{reminder}/resolve": {
            "patch": {
                "tags": [
                    "ReminderController"
                ],
                "summary": "Resolve um lembrete",
                "description": "Resolve um lembrete e retorna se foi possível resolver",
                "operationId": "resolve",
                "parameters": [
                    {
                        "name": "reminder",
                        "in": "path",
                        "description": "ID do lembrete",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reminder": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object",
                                    "example": {
                                        "success": true,
                                        "reminder": 1
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/v1/reminder/filter": {
            "get": {
                "tags": [
                    "ReminderController"
                ],
                "summary": "Filtra os lembretes",
                "description": "Retorna a lista paginada e filtrada de lembretes de acordo com os parâmetros",
                "operationId": "filter",
                "parameters": [
                    {
                        "name": "paginate",
                        "in": "query",
                        "description": "Quantidade da paginação",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Página",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "starts_at",
                        "in": "query",
                        "description": "Período Incial",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "ends_at",
                        "in": "query",
                        "description": "Período Final",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "is_solved",
                        "in": "query",
                        "description": "Informa se um o lembrete foi resolvido",
                        "required": true,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReminderPaginated"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/v1/reminder/list": {
            "get": {
                "tags": [
                    "ReminderController"
                ],
                "summary": "Lista os lembretes",
                "description": "Retorna a lista paginada de lembretes",
                "operationId": "listReminders",
                "parameters": [
                    {
                        "name": "paginate",
                        "in": "query",
                        "description": "Quantidade da paginação",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Página",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReminderPaginated"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/v1/reminder/{reminder}": {
            "delete": {
                "tags": [
                    "ReminderController"
                ],
                "summary": "Remove um lembrete",
                "description": "Remove um lembrete e retorna o sucesso da remoção",
                "operationId": "destroy",
                "parameters": [
                    {
                        "name": "reminder",
                        "in": "path",
                        "description": "ID do lembrete",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reminder": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object",
                                    "example": {
                                        "success": true,
                                        "reminder": 1
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "LaravelPaginate": {
                "title": "LaravelPaginate",
                "description": "Laravel Paginator",
                "properties": {
                    "total": {
                        "description": "Quantidade de itens",
                        "type": "integer"
                    },
                    "per_page": {
                        "description": "Itens por paágina",
                        "type": "integer"
                    },
                    "current_page": {
                        "description": "Página atual",
                        "type": "integer"
                    },
                    "last_page": {
                        "description": "Última página",
                        "type": "integer"
                    },
                    "first_page_url": {
                        "description": "Primeira página",
                        "type": "string"
                    },
                    "last_page_url": {
                        "description": "Última página",
                        "type": "string"
                    },
                    "prev_page_url": {
                        "description": "Próxima página",
                        "type": "string",
                        "nullable": "true"
                    },
                    "path": {
                        "description": "Caminho",
                        "type": "string"
                    },
                    "from": {
                        "description": "De",
                        "type": "integer"
                    },
                    "to": {
                        "description": "Para",
                        "type": "integer"
                    },
                    "data": {
                        "description": "Dados paginados - normalmente um modelo eloquent",
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    }
                },
                "type": "object",
                "xml": {
                    "name": "LaravelPaginate"
                }
            },
            "ReminderPaginated": {
                "title": "ReminderPaginated",
                "description": "Paginação - Reminders",
                "xml": {
                    "name": "ReminderPaginated"
                },
                "allOf": [
                    {
                        "$ref": "#/components/schemas/LaravelPaginate"
                    },
                    {
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "data": {
                                "description": "Class ReminderPaginated",
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Reminder"
                                }
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "Reminder": {
                "title": "Reminder",
                "description": "Reminder",
                "properties": {
                    "id": {
                        "description": "Identificador do lembrete",
                        "type": "integer"
                    },
                    "title": {
                        "description": "Título do lembrete",
                        "type": "string"
                    },
                    "description": {
                        "description": "Descrição do lembrete",
                        "type": "string"
                    },
                    "status": {
                        "description": "Status do lembrete: 1 - CREATED / 2 - SOLVED",
                        "type": "integer"
                    },
                    "full_name": {
                        "description": "Nome do usuário atrelado ao lembrete",
                        "type": "string"
                    },
                    "date": {
                        "description": "Data escolhida ou início do período selecionado",
                        "type": "string",
                        "format": "date"
                    },
                    "type": {
                        "description": "Tipo do lembrete: DEFAULT / ONCE / EVERY / WEEKLY / MONTHLY / YEARLY / CUSTOMIZED",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Quando o lembrete foi criado",
                        "type": "string",
                        "format": "date"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Reminder"
                }
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "oauth2",
                "description": "Postgrain - Autenticação",
                "in": "header",
                "scheme": "https",
                "flows": {
                    "password": {
                        "authorizationUrl": "http://api.postgrain.test/oauth/authorize",
                        "tokenUrl": "http://api.postgrain.test/oauth/token",
                        "refreshUrl": "http://api.postgrain.test/token/refresh",
                        "scopes": []
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}